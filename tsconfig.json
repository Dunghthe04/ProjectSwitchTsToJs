//file chứa các config của ts
{
    "compilerOptions": {
        "target":"ES6",// cho phép biên dịch code type script sang kiểu es6
        "module":"commonjs",//CommonJs là tiêu chuẩn được sử dụng trong nodejs để làm việc với các module
        "removeComments":true,//xóa comment khi biên dịch sang file js
        "esModuleInterop": true,// Dùng được từ khóa import thay cho require
        "outDir": "dist",// biên dịch ts sang js đặt ở dist
    }
}